#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# get commit message
commit_msg_file="$1"
commit_msg=$(cat "$commit_msg_file")

# commit validator
pattern="^[A-Z]"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo ""
  printf "\033[31mWiadomoÅ›Ä‡ commita nie zaczyna siÄ™ wielkÄ… literÄ…\033[0m\n"
  echo ""
  exit 1
fi

echo ""
printf "\033[1;32mâœ… ğŸš€ Brawo, piÄ™kny i czytelny kod. BÄ™dzie z tego kiedyÅ› dziedzictwo narodowe. Chyba...\033[0m\n"
echo ""


exit 0